<%- include("header") -%>

<body>
    <div class="box" id="heading">
        <h1><%=todayIs%></h1>
    </div>
    <div class="box">
        <%foundItems.forEach(function (item) {%>
        <form action="/delete" method="post">
            <div class="item">
                <input name="deleted" value="<%=item._id%>" type="checkbox" onchange="this.form.submit()">
                <input type="hidden" value="<%=todayIs%>" name=listName></input>
                <p><%=item.name%></p>
            </div>
        </form>
        <%});%>
        <form action="/" method="post" class="item">
            <input autocomplete="off" placeholder="New Item" type="text" name="task">
            <button type="submit" name="push" value="<%=todayIs%>">+</button>
        </form>
    </div>


</body>

<%- include("footer") -%>